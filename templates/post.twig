{% extends 'base.twig' %}

{% block body %}
  <div class="container">
    <img src="https://dummyimage.com/1200x400/5b76ba/ffffff" class="img-fluid" alt="...">
    <h1 class="mt-3 mb-3">post.title:  {{ post.title|upper  }}</h1>
	<h1 class="mt-3 mb-3"> POST.twig </h1>
      <div class="container mb-3">

        <div class="">
          <p class="text-muted">post.published:    {{ post.published_date|date("d F Y") }}</p>
          <p class="text-muted">today:    {{ post.published_at|date("m/d/Y") }}</p>
        </div>

      <div>
        post.content: {{ post.content|raw }}
      </div>
      <br><br>
      <div class="raw">
        post.description:  {{ post.description|slice(0, 70)|lower     }} </div>
      </div>
  </div>
{% endblock %}
